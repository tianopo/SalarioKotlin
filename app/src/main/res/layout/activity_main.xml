<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtNomeFuncionario"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:background="@drawable/round_text"
        android:hint="Nome do Funcionário"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtValorHoraTrabalhada"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:background="@drawable/round_text"
        android:hint="Valor da hora trabalhada"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/txtDiasTrabalhados"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:background="@drawable/round_text"
        android:hint="Qtd. Dias Trabalhados"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtQtdHorasDias"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:background="@drawable/round_text"
        android:hint="Qtd. Horas do Dia"
        android:inputType="number" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:text="Salário Bruto:"
        android:textSize="16dp"
        android:textStyle="bold"
        android:id="@+id/lblSalarioBruto"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:text="Desc. ISS:"
        android:textSize="16dp"
        android:textStyle="bold"
        android:id="@+id/lblDescISS"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:text="Desc. FGTS:"
        android:textSize="16dp"
        android:textStyle="bold"
        android:id="@+id/lblDescFGTS"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:text="Salário Líquido:"
        android:textSize="16dp"
        android:textStyle="bold"
        android:id="@+id/lblSalarioLiquido"
    />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:textSize="18dp"
        android:textColor="#fdfdfd"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/round_btn"
    />


</LinearLayout>